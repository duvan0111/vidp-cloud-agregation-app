# ============================================================================
# Server Configuration
# ============================================================================
HOST=127.0.0.1
PORT=8005
DEBUG=False
WORKERS=1

API_URL=


# ============================================================================
# AWS Configuration
# ============================================================================
# AWS credentials (optional if using IAM roles or environment credentials)
AWS_ACCESS_KEY_ID=xxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxx
AWS_REGION=us-east-1

# ============================================================================
# Amazon S3 Configuration
# ============================================================================
S3_BUCKET_NAME=mon-bucket-vidp
S3_PREFIX=videos/
# Presigned URL expiration in seconds (default: 1 hour)
S3_PRESIGNED_URL_EXPIRATION=3600

# ============================================================================
# Amazon DynamoDB Configuration
# ============================================================================
DYNAMODB_TABLE_NAME=vidp-metadata
# For local development with DynamoDB Local (uncomment below)
# DYNAMODB_ENDPOINT_URL=http://localhost:8000
# ============================================================================
# External Service URLs (Optional - for extended processing)
# ============================================================================
# Endpoint for the microservice that handles subtitle generation
SUBTITLE_SERVICE_URL=http://localhost:8002/api/generate-subtitles/

# Endpoint for the microservice that handles video compression
COMPRESSION_SERVICE_URL=http://localhost:8001/api/compress/upload

# ============================================================================
# Timeout Configuration (in seconds)
# ============================================================================
HTTP_TIMEOUT=600.0
SUBTITLE_TIMEOUT=600.0
COMPRESSION_TIMEOUT=600.0

# ============================================================================
# Storage Configuration
# ============================================================================
# Max upload size in bytes (Default: 500MB = 524288000)
MAX_UPLOAD_SIZE=524288000

# Optional: Override the temporary directory path
# TEMP_DIR=/tmp/aggregator_service

# Optional: Override the video storage directory path
# VIDEO_STORAGE_DIR=/var/video_storage

# ============================================================================
# Video Streaming Configuration
# ============================================================================
# Chunk size for streaming in bytes (Default: 1MB = 1048576)
CHUNK_SIZE=1048576

# ============================================================================
# FFmpeg Configuration
# ============================================================================
# Presets: ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow
FFMPEG_PRESET=medium
FFMPEG_CODEC=libx264
FFMPEG_TIMEOUT=600

# ============================================================================
# Logging Configuration
# ============================================================================
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_FILE=app.log

# ============================================================================
# Security Configuration
# ============================================================================
# defined as a JSON array string for Pydantic parsing
ALLOWED_EXTENSIONS=[".mp4", ".avi", ".mov", ".mkv"]